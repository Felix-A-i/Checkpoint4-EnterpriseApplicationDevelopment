@model List<Pet>

@{
    ViewData["msg"] = "Pets cadastrados";
}

<h1>Pets cadastrados</h1>

<mensagem texto="@TempData["msg"]"></mensagem>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Sexo</th>
            <th scope="col">Tipo de animal</th>
            <th scope="col">Tipo de raça</th>
            <th scope="col">Idade</th>
            <th scope="col">Data de nascimento</th>
            @foreach(var item in Model)
            {
                <th>
                    <input type="search"/>
                    <a asp-action="filtrar" asp-route-idade="@item.Idade" class="btn btn-dark btn-sm">Filtrar</a>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Nome</th>
                <th scope="row">@item.Sexo</th>
                <th scope="row">@item.TipoAnimal</th>
                <th scope="row">@item.Raca</th>
                <th scope="row">@item.Idade</th>
                <th scope="row">@item.DataNascimento</th>
                <th>
                    <a asp-action="editar" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <button onClick="idPet.value = @item.Id" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal">
                        Remover
                    </button>
                </th>
            </tr>
        }
    </tbody>
</table>

<a asp-action="cadastrar" class="btn btn-outline-secondary">Cadastrar</a>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que quer remover o pet?
            </div>
            <div class="modal-footer">
                <form asp-action="remover">
                    <input type="hidden" name="id" id="idPet" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>